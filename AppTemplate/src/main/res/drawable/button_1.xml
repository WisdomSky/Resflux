<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape>
			<gradient
				android:startColor="#40ee90"
				android:endColor="#45ee9c"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#44cc44" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#45ff9c"
				android:endColor="#40ff90"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#44cc44" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>
</selector>
