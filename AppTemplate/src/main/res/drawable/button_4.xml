<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape>
			<solid
				android:color="#efef55" />
			<!--<stroke
				android:width="1dp"
				android:color="#99992f" />-->
			<corners
			android:radius="15dp" />
			
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#99efef55"
				android:endColor="#9999992f"
				android:angle="270" />
			<!--<stroke
				android:width="1dp"
				android:color="#99992f" />-->
			<corners
				android:radius="15dp" />
	
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>
</selector>
